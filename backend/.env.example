# Environment Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/taksha_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Razorpay Configuration
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# Email Configuration
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@takshaveda.com

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Session Configuration
SESSION_SECRET=your-session-secret-key

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# File Upload
MAX_FILE_SIZE=10485760
MAX_FILES=10

# Database Pool Size
DB_POOL_SIZE=10

# Cache Configuration
CACHE_TTL=3600

# Log Level
LOG_LEVEL=info

# Admin Configuration
ADMIN_EMAIL=admin@takshaveda.com
ADMIN_PASSWORD=admin123

# Payment Configuration
PAYMENT_CURRENCY=INR
PAYMENT_WEBHOOK_SECRET=your-payment-webhook-secret

# SMS Configuration (Optional)
SMS_API_KEY=your-sms-api-key
SMS_API_SECRET=your-sms-api-secret

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379

# SSL Configuration
SSL_CERT_PATH=
SSL_KEY_PATH=

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://takshaveda.com

# Cookie Configuration
COOKIE_SECURE=false
COOKIE_HTTPONLY=true
COOKIE_SAME_SITE=lax

# Security Configuration
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=300